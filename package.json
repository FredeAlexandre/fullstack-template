{
	"name": "acme",
	"private": true,
	"workspaces": ["apps/*", "tooling/*", "packages/*"],
	"scripts": {
		"build": "turbo run build",
		"clean": "git clean -xdf node_modules",
		"clean:ws": "turbo run clean",
		"typecheck": "turbo run typecheck",
		"ui-add": "turbo run ui-add",

		"db:push": "turbo -F @acme/db push",
		"db:studio": "turbo -F @acme/db studio",

		"dev": "turbo watch dev --continue",
		"dev:next": "turbo watch dev -F @acme/nextjs...",

		"lint": "biome check",
		"lint:fix": "biome check --write",
		"lint:ws": "turbo run //#lint //#sherif //#knip",

		"sherif": "bunx sherif@latest",
		"knip": "bun with-env knip",

		"postinstall": "turbo run //#lint //#sherif",
		"with-env": "dotenv -e .env --"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^22.13.4",
		"dotenv-cli": "^8.0.0",
		"knip": "^5.44.4",
		"sherif": "^1.3.0",
		"turbo": "^2.4.4",
		"typescript": "^5.7.3"
	},
	"packageManager": "bun@1.2.2"
}
