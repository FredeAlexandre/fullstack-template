{
  "name": "acme",
  "private": true,
  "workspaces": [
    "apps/*",
    "tooling/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun with-env turbo dev",
    "build": "turbo build typecheck",
    "clean": "git clean -xdf node_modules",
    "clean:ws": "turbo run clean",
    "knip": "knip",
    "sherif": "sherif",
    "lint": "bunx biome check --write .",
    "typecheck": "turbo typecheck",
    "db:push": "turbo -F @acme/db push",
    "with-env": "dotenv -e .env --"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.13.4",
    "dotenv-cli": "^8.0.0",
    "knip": "^5.44.4",
    "sherif": "^1.3.0",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "bun@1.2.2"
}
